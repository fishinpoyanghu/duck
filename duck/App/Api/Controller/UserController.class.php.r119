    public function getUseLog(){
        if(IS_POST){
            $data = I();
            $log = M('resource_log')
                ->where(array('userid'=>$this->userId))
                ->order('id desc')
                ->limit(20)
                ->select();
            foreach ($log as $k => $v){
                if($v['create_time']){
                    $log[$k]['create_time'] = date('m-d',$v['create_time']);
