                    $r2=M('member')->where(array('id'=>$log['touserid']))->setInc('animal_num',$log['realprice']);
                    if($this->isFalse($r2)){
                        $this->echoJson(-1);
                    }
                }
                if($log['type']==2){
                    if($usermsg['currency'] < $log['price']){
                        $this->echoJson('蛋数量不足以出售,不能确认收款!');
