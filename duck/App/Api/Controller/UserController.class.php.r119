    //狗升级数量
    public function dogUpgrade(){
        if(IS_POST){
           // $dog_upgradenum=C('dog_upgradenum');
            $dog_maxlev=C('dog_maxlev')?C('dog_maxlev'):9;
            /*if($dog_upgradenum+0<1){
                $this->echoJson('狗数'); 
            }*/
            $data = M('member')->field('animal_num,dog_lev')->where(array('id'=>$this->userId))->find();
